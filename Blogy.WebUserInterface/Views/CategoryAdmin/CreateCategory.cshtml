@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container-fluid">
    <div class="card-header">
        <h3 class="card-title">
            <b>Create Category</b>
        </h3>
    </div>
    <div class="card-body">
        <form role="form" method="post" action="/CategoryAdmin/CreateCategory/">
            <div class="row">              
                <div class="col-sm-6">
                    <div class="form-group">
                        <label style="color:red"><b>Name</b></label>
                        <input type="text" class="form-control" placeholder="category name" name="Name">
                        @Html.ValidationMessage("Name", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label style="color:red"><b>Status</b></label>
                        <input type="text" class="form-control" placeholder="status" name="Status">
                        @Html.ValidationMessage("Status", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:1rem">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label style="color:red"><b>Description</b></label>
                        <textarea class="form-control" rows="3" placeholder="description" name="Description"></textarea>
                        @Html.ValidationMessage("Description", new {@class= "text-danger" })
                    </div>
                </div>
            </div>
            <button style="margin-top:1rem" type="submit" class="btn btn-outline-success col-md-12">Create New Category</button>
        </form>
    </div>
</div>