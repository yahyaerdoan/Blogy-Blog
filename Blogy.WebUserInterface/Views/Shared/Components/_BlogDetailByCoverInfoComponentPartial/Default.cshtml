@model Article
<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.CoverImageUrl');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-6">
                <div class="post-entry text-center">
                    <h1 class="mb-4">@Model.Title</h1>
                    <div class="post-meta align-items-center text-center">
                        <figure class="author-figure mb-0 me-3 d-inline-block"><img src="~/template/blogy-1.0.0/images/person_1.jpg" alt="Image" class="img-fluid"></figure>
                        <span class="d-inline-block mt-1">By Carl Atkinson</span>
                        <span>&nbsp;-&nbsp; February 10, 2019</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

